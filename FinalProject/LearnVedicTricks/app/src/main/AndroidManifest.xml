<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.learnvedictricks.shivakumar.learnvedictricks">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RuleTypesActivity"
            android:label="@string/rule_category"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RecyclerViewActivity"
            android:label="@string/rules_list"
            android:parentActivityName=".RuleTypesActivity" />
        <activity
            android:name=".RuleIllustrationActivity"
            android:label="@string/app_name">

        </activity>
    </application>

</manifest>